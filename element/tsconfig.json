{
  "compilerOptions": {
    "paths": {
      "svelte": ["./node_modules/svelte/types/runtime/index.d.ts"],
      "svelte/motion": ["./node_modules/svelte/types/runtime/motion/index.d.ts"]
    },
    "declaration": true,
    "outDir": "dist",
    "target": "es2017",
    "module": "esnext",
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.svelte"
  ],
  "typeRoots": [
    "node_modules/@types",
    "node_modules/svelte/**/*.d.ts"
  ]
}